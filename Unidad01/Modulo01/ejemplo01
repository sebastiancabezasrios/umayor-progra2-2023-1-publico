//Colocar dentro de la clase consola

static void Main(string[] args)
{
    String ejemplo = "Ejemplo de IF anidado";
    Console.WriteLine(ejemplo);
    //Caso de ejemplo
    //Se quiere saber la situacion de final de semestre de un estudiante
    //Si tiene un promedio:
    //  < 3.5 queda reprobado
    //  >= 5.0 se exime y queda aprobado
    // nota entre [3.5 y 4.9] debe rendir examen.

    //la nota será solicitada al usuario por teclado
    double promedio;
    Console.Write("Ingrese el promedio del estudiante: ");
    promedio = double.Parse(Console.ReadLine());
    Console.WriteLine(promedio);
    if (promedio < 3.5)
    {
        Console.WriteLine("El estudiante queda reprobado :(");
    }
    else if (promedio >= 5)
    {
        Console.WriteLine("El estudiante se exime y está aprobado:)");
    }
    else
    {
        Console.WriteLine("El estudiante debe dar examen");
    }
    Console.WriteLine("Fin del " + ejemplo);
}